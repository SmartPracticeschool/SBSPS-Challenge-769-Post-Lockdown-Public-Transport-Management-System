<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mode_details">

    <View
        android:id="@+id/view2"
        android:layout_width="439dp"
        android:layout_height="77dp"
        android:background="@drawable/ic_323"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/details_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_bold"
        android:padding="11dp"
        android:text="Search your mode of transport here -"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/detaisl_spinner"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:entries="@array/spinner_items"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="292dp"
        android:layout_height="63dp"
        android:fontFamily="sans-serif-light"
        android:text="Now select your Transport Id from available transport"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/detaisl_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_heading"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/main_details_modeid"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:fontFamily="@font/roboto_black"
        android:text="TextView"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detaisl_spinner"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/main_details_fare"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:fontFamily="@font/roboto_black"
        android:text="TextView"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_details_modeid"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/main_details_Startfrom"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:fontFamily="@font/roboto_black"
        android:text="TextView"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_details_stops"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/main_details_stops"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:fontFamily="@font/roboto_black"
        android:text="TextView"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/bookticket__btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_details_fare"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/bookticket__btn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/round_bt"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Book Now"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detaisl_spinner"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>